<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>Veterinary Clinic Management System</display-name>

    <!-- Welcome File: starter page (homepage) only -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- ======================= -->
    <!-- RBAC: role-based access -->
    <!-- ======================= -->
    <filter>
        <filter-name>RoleBasedAccessFilter</filter-name>
        <filter-class>filter.RoleBasedAccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RoleBasedAccessFilter</filter-name>
        <url-pattern>/customer/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RoleBasedAccessFilter</filter-name>
        <url-pattern>/owner/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RoleBasedAccessFilter</filter-name>
        <url-pattern>/vet/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RoleBasedAccessFilter</filter-name>
        <url-pattern>/staff/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RoleBasedAccessFilter</filter-name>
        <url-pattern>/lab/*</url-pattern>
    </filter-mapping>

    <!-- ======================= -->
    <!-- Authentication Servlets -->
    <!-- ======================= -->
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.auth.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- ======================= -->
    <!-- Customer Servlets       -->
    <!-- ======================= -->
    
    <servlet>
        <servlet-name>CustomerDashboardServlet</servlet-name>
        <servlet-class>controller.customer.CustomerDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerDashboardServlet</servlet-name>
        <url-pattern>/customer/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Booking (guest appointment request from landing) -->
    <servlet>
        <servlet-name>BookAppointmentServlet</servlet-name>
        <servlet-class>controller.appointment.BookAppointmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookAppointmentServlet</servlet-name>
        <url-pattern>/book</url-pattern>
    </servlet-mapping>

</web-app>
